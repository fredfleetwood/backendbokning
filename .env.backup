# VPS Automation Server - Environment Configuration

# Required Settings - MUST BE CONFIGURED
API_SECRET_TOKEN=your-secret-api-token-change-me
SUPABASE_WEBHOOK_URL=https://your-project.supabase.co/rest/v1/webhook
SUPABASE_SECRET_KEY=your-supabase-secret-key
WEBHOOK_SECRET=your-webhook-secret-key
SESSION_SECRET_KEY=your-session-secret-key

# Application Settings
APP_NAME=VPS Automation Server
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Performance Settings
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT=1800
WORKER_CONCURRENCY=5
MAX_BROWSER_INSTANCES=10

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# QR Code Configuration
QR_CAPTURE_INTERVAL=25
QR_IMAGE_QUALITY=95

# Security Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
